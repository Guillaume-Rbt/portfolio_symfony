{% extends 'base_admin.html.twig' %}
{% form_theme formConfig 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ titlePage }}{% endblock %}

{% block body %}

<h1> Informations générales </h1>

	{% for message in app.flashes('successConfig') %}
		<div class="alert-success m-2 p-2 ">
			{{ message }}</div>
	{% endfor %}
	{% for message in app.flashes("dangerConfig") %}
		<div class="alert-danger m-2 p-2">
			{{ message }}</div>
	{% endfor %}

{{ form_start(formConfig) }}

{{ form_row(formConfig.name)}}
{{ form_row(formConfig.firstname)}}
{{ form_row(formConfig.birthDate)}}
{{ form_row(formConfig.description)}}
{{ form_row(formConfig.phone)}}
{{ form_row(formConfig.email)}}
{{ form_row(formConfig.linkedin_link)}}
{{ form_row(formConfig.github_link)}}

{% if (config.photo) %}
{{ form_row(formConfig.photo, {'required':false, 'attr': {"data-file" : config.photo}})}}
{% else %}
{{ form_row(formConfig.photo, {'required':true })}}
{% endif %}

{% if (config.CV) %}
{{ form_row(formConfig.CV, {'required':false, 'attr': {"data-file" : config.CV}})}}
{% else %}
{{ form_row(formConfig.CV, {'required':true })}}
{% endif %}


{{ form_row(formConfig.submit)}}




{{ form_end(formConfig) }}


{% endblock %}